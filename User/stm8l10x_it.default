/**
  * @brief External IT PIN7 Interrupt routine.
  * @param  None
  * @retval None
  */
INTERRUPT_HANDLER(EXTI7_IRQHandler, 15)
{
  EXTI_ClearITPendingBit(EXTI_IT_Pin7);
  if (u8_button < 1)
  {
    ++u8_button;
  }
  else
  {
    u8_button = 0;
  }
}

